
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build DLL for Unity",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I",
                "c:/Users/gunni/Desktop/Flight Controller/src/",
                "-I",
                "c:/Users/gunni/Desktop/Flight Controller/src/abstraction_layer",
                "-I",
                "c:/Users/gunni/Desktop/Flight Controller/src/common",
                "-I",
                "c:/Users/gunni/Desktop/Flight Controller/src/control_logic",
                "-I",
                "c:/Users/gunni/Desktop/Flight Controller/src/quadsim",
                "-shared",
                "-static-libgcc",
                "-static-libstdc++",
                "-o",
                "c:/Users/gunni/Desktop/Flight Controller/src/quadsim/flight_controller.dll",
                "c:/Users/gunni/Desktop/Flight Controller/src/quadsim/unity_main.cpp",
                "c:/Users/gunni/Desktop/Flight Controller/src/control_logic/flight_controller.cpp",
                "c:/Users/gunni/Desktop/Flight Controller/src/quadsim/quad.cpp",
                "c:/Users/gunni/Desktop/Flight Controller/src/control_logic/utils.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the C++ code into a DLL for Unity."
        },
        {
            "label": "Copy DLL to Unity",
            "type": "shell",
            "command": "copy",
            "args": [
                "${workspaceFolder}/src/quadsim/flight_controller.dll",
                "C:/Users/gunni/Unity_Projects/QuadCopter/Assets/Plugins/flight_controller.dll"
            ]
        },
        {
            "label":"Build and Copy",
            "dependsOrder":"sequence",
            "dependsOn":[
                "Build DLL for Unity",
                "Copy DLL to Unity"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Makes this the default build task (Ctrl+Shift+B)
            },
        }
    ]
}
