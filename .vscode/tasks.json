
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build DLL for Unity",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I",
                "${workspaceFolder}/src/",
                "-I",
                "${workspaceFolder}/abstraction_layer",
                "-I",
                "${workspaceFolder}/src/common",
                "-I",
                "${workspaceFolder}/src/flight_controller",
                "-I",
                "${workspaceFolder}/src/quadsim",
                "-shared",
                "-static-libgcc",
                "-static-libstdc++",
                "-o",
                "${workspaceFolder}/src/quadsim/flight_controller.dll",
                "${workspaceFolder}/src/quadsim/unity_main.cpp",
                "${workspaceFolder}/src/common/coord_trans.cpp",
                "${workspaceFolder}/src/flight_controller/EKF.cpp",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the C++ code into a DLL for Unity."
        },
        {
            "label": "Copy DLL to Unity",
            "type": "shell",
            "command": "copy",
            "args": [
                "${workspaceFolder}/src/quadsim/flight_controller.dll",
                "${config:myPlugin.unityPluginPath}/flight_controller.dll"
            ]
        },
        {
            "label":"Build and Copy",
            "dependsOrder":"sequence",
            "dependsOn":[
                "Build DLL for Unity",
                "Copy DLL to Unity"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Makes this the default build task (Ctrl+Shift+B)
            },
        }
    ]
}
